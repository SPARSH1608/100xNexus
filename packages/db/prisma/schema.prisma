generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRoles {
  CANDIDATE
  ADMIN
}

enum ContestStatus {
  DRAFT
  PUBLISHED
  UNPUBLISHED
  WAITING
  LIVE
  FINISHED
}

model Batch {
  id       String    @id @default(cuid())
  name     String
  users    User[]    @relation("UserBatches")
  contests Contest[] @relation("ContestBatches")
}

model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  password String
  role     UserRoles @default(CANDIDATE)
  batches  Batch[]   @relation("UserBatches")
  contests Contest[]
  quizSubmissions QuizSubmission[]
  results QuizResult[]
  quizParticipants QuizParticipant[] 
  interviews Interview[]
  
}

model Contest {
  id        String        @id @default(cuid())
  title     String
  userId    String
  isOpenAll Boolean       @default(true)
  startTime DateTime      @default(now())
  endTime DateTime?
  status    ContestStatus @default(DRAFT)
  
  showResults Boolean       @default(false)
  
  joinCode String? @unique
  questions Question[]
  participants QuizParticipant[]
  results QuizResult[]
  submissions QuizSubmission[]
  user      User          @relation(fields: [userId], references: [id])
  batches   Batch[]       @relation("ContestBatches")
}

model Question {
  id          String   @id @default(cuid())
  title       String
  description String?
  score       Int
  options     Option[]
  contestId   String
  orderIndex Int
  timeLimit Int
  contest     Contest  @relation(fields: [contestId], references: [id])
  submissions QuizSubmission[]
 

}

model QuizSubmission{
  id String @id @default(cuid())
  userId String
  contestId String
  questionId String
  answer Json
  score Int
  submittedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  contest     Contest  @relation(fields: [contestId], references: [id])
  question    Question @relation(fields: [questionId], references: [id])
  @@unique([userId,questionId])
}
model QuizParticipant {
  contestId String
  userId String
  
  joinedAt DateTime @default(now())
  
  contest Contest @relation(fields: [contestId],references: [id])
  user User @relation(fields: [userId],references: [id])
  
  @@id([contestId,userId])
}
model QuizResult{
  contestId String
  userId String
  finalScore Int
  rank Int
  contest Contest @relation(fields: [contestId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  generatedAt DateTime @default(now())
  @@id([contestId,userId])
}
model Option {
  id         String   @id @default(cuid())
  title      String
  isCorrect  Boolean
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
}

enum InterviewStatus {
  PENDING
  SCHEDULED
  COMPLETED
  CANCELLED
}

model Interview {
  id          String          @id @default(cuid())
  studentId   String
  topic       String
  description String?
  startTime   DateTime?       @default(now())
  status      InterviewStatus @default(PENDING)
  sandboxId   String?         // Persist E2B sandbox ID
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  user        User            @relation(fields: [studentId], references: [id])
  messages    InterviewMessage[]
  events      InterviewEvent[]
}

model InterviewMessage {
  id          String   @id @default(cuid())
  interviewId String
  role        String   // 'user' or 'ai'
  content     String
  createdAt   DateTime @default(now())
  interview   Interview @relation(fields: [interviewId], references: [id])
}

model InterviewEvent {
  id          String   @id @default(cuid())
  interviewId String
  type        String   // 'terminal_command', 'terminal_output', 'file_create', 'file_delete', 'file_update'
  content     String   // The command text, filename, or diff
  metadata    Json?    // Additional info like directory, success status
  createdAt   DateTime @default(now())
  interview   Interview @relation(fields: [interviewId], references: [id])
}
